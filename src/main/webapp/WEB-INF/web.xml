    </servlet-mapping>

    <servlet>
        <servlet-name>ShowCart</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.user.cart.ShowCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowCart</servlet-name>
        <url-pattern>/cart/show</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCart</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.user.cart.DeleteCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCart</servlet-name>
        <url-pattern>/cart/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckOutServlet</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.user.cart.CheckOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckOutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <!--user end-->
</web-app>
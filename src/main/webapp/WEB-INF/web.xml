<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--admin-->
    <servlet>
        <servlet-name>HomeAdmin</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.admin.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeAdmin</servlet-name>
        <url-pattern>admin/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateProductAdmin</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.admin.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductAdmin</servlet-name>
        <url-pattern>/admin/product/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListProductAdmin</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.admin.product.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductAdmin</servlet-name>
        <url-pattern>/admin/product/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditProductAdmin</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.admin.product.EditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProductAdmin</servlet-name>
        <url-pattern>/admin/product/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetailProductAdmin</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.admin.product.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductAdmin</servlet-name>
        <url-pattern>/admin/product/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteProductAdmin</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.admin.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductAdmin</servlet-name>
        <url-pattern>/admin/product/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListCartAdmin</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.admin.cart.ListCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCartAdmin</servlet-name>
        <url-pattern>/admin/cart/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetailCartAdmin</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.admin.cart.DetailCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailCartAdmin</servlet-name>
        <url-pattern>/admin/cart/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BrowseCartAdmin</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.admin.cart.BrowseCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BrowseCartAdmin</servlet-name>
        <url-pattern>/admin/cart/browse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.account.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.account.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!--admin end-->







    <!--user-->
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.user.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShopServlet</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.user.product.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShopServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetailProduct</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.user.product.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProduct</servlet-name>
        <url-pattern>/single-product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCart</servlet-name>
        <servlet-class>com.t2010a.fruits.controller.user.cart.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCart</servlet-name>
